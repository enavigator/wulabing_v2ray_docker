version: '3'
services:
  v2ray:
    image: v2fly/v2fly-core
    volumes:
      - /etc/v2ray:/etc/v2ray
    networks:
      - v2ray

  nginx:
    image: nginx:stable
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /etc/nginx:/etc/nginx
      - /www:/usr/share/nginx/html
      - /ssl:/ssl
    networks:
      - v2ray

networks:
  v2ray: